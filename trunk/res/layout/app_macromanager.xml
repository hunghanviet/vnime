<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"><LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:layout_weight="2"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/macromanager_label_key"></TextView>
<EditText android:layout_height="wrap_content" android:id="@+id/macromanager_txtKey" android:layout_width="fill_parent" android:lines="1"></EditText>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:layout_weight="1"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/macromanager_label_value"></TextView>
<EditText android:layout_height="wrap_content" android:id="@+id/macromanager_txtValue" android:layout_width="fill_parent" android:lines="1"></EditText>
</LinearLayout>
</LinearLayout>
<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:gravity="right"><Button android:layout_height="wrap_content" android:id="@+id/macromanager_btnUpdate" android:layout_width="@dimen/macromanager_button_width" android:text="@string/macromanager_label_add"></Button>
</LinearLayout>
<ListView android:layout_height="wrap_content" android:id="@+id/macromanager_lstMacros" android:layout_width="fill_parent" android:layout_weight="1"></ListView>
</LinearLayout>
