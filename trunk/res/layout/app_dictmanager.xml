<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical">
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent">
		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="@string/dictmanager_label_word"
			android:padding="@dimen/dictmanager_label_padding"></TextView>
		<EditText android:layout_height="wrap_content" android:id="@+id/dictmanager_edtWord"
			android:layout_width="fill_parent" android:lines="1"></EditText>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:gravity="right">
		<Button android:layout_height="wrap_content" android:id="@+id/dictmanager_btnAddDelete"
			android:layout_width="@dimen/dictmanager_button_width" android:text="@string/dictmanager_label_add"></Button>
	</LinearLayout>
	<ListView android:layout_height="wrap_content" android:id="@+id/dictmanager_lstWords"
		android:layout_width="fill_parent" android:layout_weight="1"></ListView>
</LinearLayout>
