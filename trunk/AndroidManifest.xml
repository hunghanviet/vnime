<?xml version="1.0" encoding="utf-8"?>
<!--
Version code should be in the form: xxyyzzzz (leading zero can be omitted)
	xx is major version number
	yy is minor version number
	zzzz is build number
 -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="org.ime.vnime" android:versionCode="1930068" android:versionName="1.0 beta 3">
	<application android:icon="@drawable/icon" android:label="@string/pkg_name">
	
		<service android:permission="android.permission.BIND_INPUT_METHOD"
			android:label="@string/svc_name" android:name=".VnIme">
			<intent-filter>
				<action android:name="android.view.InputMethod"></action>
			</intent-filter>
			<meta-data android:name="android.view.im" android:resource="@xml/vnime_info" />
		</service>
		
		<activity android:label="@string/app_name" android:name=".VnImeSettings">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<!--
				<category android:name="android.intent.category.LAUNCHER"/>
				-->
			</intent-filter>
		</activity>

	</application>
	<uses-sdk android:minSdkVersion="4" />

<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest> 